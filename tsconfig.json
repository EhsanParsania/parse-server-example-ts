{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./cloud",
    "rootDir": "./cloud-ts",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "./cloud/.tsbuildinfo"
  },
  "include": [
    "cloud-ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 